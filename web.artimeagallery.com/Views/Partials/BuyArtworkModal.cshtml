                    <small>If you don't save, your changes will be lost.</small>
                </p>
            </div>*@
            <div class="modal-footer">

                <button type="button" style="padding: 3px; margin: 3px"class="button large lightgrey" data-dismiss="modal">Close</button>
                <button type="button" style="padding: 3px ; margin: 3px" class="button large pink">Add To Cart</button>
            </div>
        </div>
    </div>
