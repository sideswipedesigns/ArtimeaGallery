@using extension.railgunit.com.Image
@model web.artimeagallery.com.Models.Artwork
    

  <!-- Modal -->

@{ var divId = "artworkModal" + Model.Id;}

<div id="@divId" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <button type="button" style="padding: 3px ; margin-right: 13px" class="button large pink pull-right">Add To Cart</button>
                <h4 class="modal-title">Buy Artwork: @Model.Title - £@Model.Price - @Model.ArtworkType, @Model.Size</h4>             
                
            </div>
            <div align="center">
                @Html.Image(Model.Bytes)
            </div>
