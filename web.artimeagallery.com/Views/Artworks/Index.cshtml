@using extension.railgunit.com.Image
@model IEnumerable<web.artimeagallery.com.Models.Artwork>

@{
    ViewBag.Title = "Index";
}

<div id="wrapper" class="no_sidebar" style="">

    <div id="content">

        <h2>Artworks Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>

        <table id="example" class="table">
            <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResizedBytes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Material)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Extension)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ForSale)
                </th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Artist != null)
                        {
                            @item.Artist.FirstName
                            @item.Artist.LastName
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.Image(item.ResizedBytes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Material)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Extension)
                    </td>
                    <td>
                        @if (item.ArtworkType != null)
                        {
                            @item.ArtworkType.Name
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForSale)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                        @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    </td>

                </tr>
            }
            </tbody>

        </table>

    </div>
</div>


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>